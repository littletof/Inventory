<Page loaded="loaded">
	<ActionBar class="action-bar">
	<Label text="User Details" class="action-bar-title" />
	  <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="onNavBtnTap"/>
	</ActionBar>
	<StackLayout orientation="vertical">
		<StackLayout orientation="horizontal">
			<Image width="500px" height="500px" src="App_Resources\Android\drawable-xxxhdpi/icon.png"/>
			<StackLayout orientation="vertical">
				<Label id="nameLabel" text="Name"/>
				<StackLayout orientation="horizontal">
					<Label text="{{L('PastBorrows)}}"/>
					<Label id="pastBorrowCounter" text="1"/>
					<Label text="{{L('PresentBorrows')}}"/>
					<Label id="presentBorrowCounter" text="5"/>
				</StackLayout>
			</StackLayout>
		</StackLayout>
		<Label text="{{L('EmailAddress')}}"/>
		<Label id="emailLabel" text="emailAddress"/>
	</StackLayout>
</Page>