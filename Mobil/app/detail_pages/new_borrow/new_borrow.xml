<Page class="page" navigatingTo="onNavigatingTo" xmlns:nativescript-fresco="nativescript-fresco">
	<ActionBar class="action-bar">
	  <Label class="action-bar-title" />
	  <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="onBackButtonTap"/>
	</ActionBar>
	<ScrollView>
		<StackLayout orientation="vertical">
			<StackLayout orientation="horizontal" verticalalignment="center">
					<nativescript-fresco:FrescoDrawee width="300px" height="300px" imageUri="{{ image }}"/>
					<StackLayout orientation="vertical" verticalalignment="center" alignment="right">
						<Label id="itemNameLabel" class="name" text="{{ deviceName }}"/>
					</StackLayout>
			</StackLayout>
			<Label text="{{L('BorrowUntil')}}"/>
			<DatePicker year="{{ endDate_yyyy }}" month="{{ endDate_mm }}" day="{{ endDate_dd }}" minDate="{{ startDate }}"  verticalAlignment="center"></DatePicker>			
			<Label text="{{L('Comment')}}"/>
			<TextView id="commentTV" text="{{ comment }}"/>
			<StackLayout orientation="horizontal">
				<Label text="{{L('AmountBorrowed')}}"/>
				<Label text="{{ quantity_borrowed }}"/>
			</StackLayout>
			<Slider value="{{ quantity_borrowed }}" minValue="0" maxValue="{{ quantity_available }}" style="caret-color:#2E7D32"/>
			<Button id="borrowButton" width="500px" text="{{L('Borrow')}}" tap="borrowButtonTapped"/>
		</StackLayout>
	</ScrollView>
</Page>