<Page loaded="loaded">
	<ActionBar class="action-bar">
	  <Label text="Borrow" class="action-bar-title" />
	  <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="onNavBtnTap"/>
	</ActionBar>
	<ScrollView>
		<StackLayout orientation="vertical">
			<StackLayout orientation="horizontal" verticalalignment="center">
					<Image width="300px" height="300px" src="https://cdn3.iconfinder.com/data/icons/design-n-code/100/272127c4-8d19-4bd3-bd22-2b75ce94ccb4-128.png"/>
					<StackLayout orientation="vertical" verticalalignment="center" alignment="right">
						<Label id="itemNameLabel" class="name" text="{{ deviceName }}"/>
					</StackLayout>
			</StackLayout>
			<Label text="Borrow until:"/>
			<DatePicker year="{{ end_date_yy }}" month="{{ end_date_mm }}" day="{{ end_date_dd }}" minDate="{{ today }}"  verticalAlignment="center"></DatePicker>			
			<Label text="Comment:"/>
			<TextView id="commentTV" text="{{ comment }}"/>
			<StackLayout orientation="horizontal">
				<Label text="Amount borrowed:"/>
				<Label text="{{ device_quantity }}"/>
			</StackLayout>
			<Slider value="{{ device_quantity }}" minValue="1" maxValue="10" style="caret-color:#2E7D32"/>
			<Button id="borrowButton" width="500px" text="Borrow!" tap="borrowButtonTapped"/>
		</StackLayout>
	</ScrollView>
</Page>