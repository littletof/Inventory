<Page loaded="loaded">
    <Page.actionBar>
         <ActionBar title="Device Details" class="action-bar">
             <NavigationButton text="ios back" android.systemIcon = "ic_menu_back" tap="onNavBtnTap"/>
             <ActionBar.actionItems>
                <ActionItem ios.systemIcon="2" android.systemIcon = "ic_menu_edit" tap="onEditBtnTap"/>
                <ActionItem ios.systemIcon="16" android.systemIcon = "ic_menu_delete" tap="onDelBtnTap"/>
            </ActionBar.actionItems>
         </ActionBar>
    </Page.actionBar>
	<ScrollView>
		<StackLayout orientation="vertical">
			<StackLayout orientation="horizontal">
				<Image width="500px" height="500px" src="App_Resources\Android\drawable-xxxhdpi/icon.png"/>
				<Label id="deviceNameLabel" text="Device Name"/>
			</StackLayout>
			<Label text="Description"/>
			<Label id="descriptionLabel" text="Device Description"/>
		</StackLayout>
	</ScrollView>
	
</Page>