<Page class="page" navigatingTo="onNavigatingTo" xmlns:nativescript-fresco="nativescript-fresco">
    <Page.actionBar>
         <ActionBar class="action-bar">
		 <Label text="{{ deviceName }}" class="action-bar-title" />
             <NavigationButton text="ios back" android.systemIcon = "ic_menu_back" tap="onBackButtonTap"/>
             <ActionBar.actionItems>
                <ActionItem ios.systemIcon="2" android.systemIcon = "ic_menu_edit" tap="onEditBtnTap"/>
                <ActionItem ios.systemIcon="16" android.systemIcon = "ic_menu_delete" tap="onDelBtnTap"/>
            </ActionBar.actionItems>
         </ActionBar>
    </Page.actionBar>
	<ScrollView>
		<StackLayout orientation="vertical">
			<nativescript-fresco:FrescoDrawee width="500px" height="500px" imageUri="{{ image }}" horizontalAlignment="center"/>
			<Label text="{{L('Description')}}"/>
			<Label id="descriptionLabel" text="{{ description }}"/>
			<StackLayout>
				<Label text="{{L('QuantityAvailable')}}"/>
				<Label id="quantityAvailableLabel" text="{{ quantity_available }}"/>
				<Label text="{{L('TotalQuantity')}}"/>
				<Label id="totalQuantityLabel" text="{{ quantity_total }}"/>
			</StackLayout>
			<Button id="borrowButton" text="{{L('Borrow')}}" width="500px" tap="onBorrowButtonTapped" />
		</StackLayout>
	</ScrollView>
</Page>