<Page loaded="loaded">
<Page.actionBar>
      <ActionBar class="action-bar" >
        <Label text="{{L('SignUp')}}" class="action-bar-title" />
      </ActionBar>
  </Page.actionBar>
    <StackLayout orientation="vertical">
        <TextField id="name" text="{{name}}" hint="{{L('Name')}}"/>
        <TextField id="email" text="{{email}}" hint="{{L('EmailAddress')}}" keyboardType="email" autocorrect="false"
        autocapitalizationType="none"/>
        <TextField id="password" text="{{password}}" hint="{{L('Password')}}" secure="true"/>
        <TextField id="retypedPassword" hint="{{L('ReTypePassword')}}" secure="true"/>
        <Button text="{{L('Register')}}" tap="register" />
    </StackLayout>
</Page>