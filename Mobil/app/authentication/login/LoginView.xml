<Page loaded="loaded">
<Page.actionBar>
      <ActionBar class="action-bar" >
        <Label text="{{L('Inventory')}}" class="action-bar-title" />
      </ActionBar>
  </Page.actionBar>
    <StackLayout orientation="vertical" verticalAlignment="center">
        <Image src="res://login_image"/>
        <TextField id="email" text="{{email}}" hint="{{L('EmailAddress')}}" keyboardType="email" autocorrect="false"
        autocapitalizationType="none"/>
        <TextField id="password" text="{{password}}" hint="{{L('Password')}}" secure="true"/>

        <Button text="{{L('Login')}}" tap="login" />
        
        <Label class="link" text="{{L('ContinueAsAGuest')}}" tap="continueAsAGuest"/>

        <StackLayout orientation="horizontal">
            <Label text="{{L('DontHaveAnAccountYet')}}"/>
            <Label class="link" text="{{L('SignUp')}}" tap="signUp" marginLeft="1%"/>            
        </StackLayout>
    </StackLayout>
</Page>