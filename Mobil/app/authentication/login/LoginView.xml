<Page loaded="loaded">
    <StackLayout orientation="vertical">
        <TextField id="email" text="{{email}}" hint="Email Address" keyboardType="email" autocorrect="false"
        autocapitalizationType="none"/>
        <TextField id="password" text="{{password}}" hint="Password" secure="true"/>

        <Button text="Login" tap="login" />
        
        <Label class="link" text="Continue as a guest!" tap="continueAsAGuest"/>

        <StackLayout orientation="horizontal">
            <Label text="Don't have an account yet? "/>
            <Label class="link" text="Sign up!" tap="signUp"/>            
        </StackLayout>
    </StackLayout>
</Page>