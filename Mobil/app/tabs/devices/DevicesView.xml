<Page loaded="onLoaded" >
<ScrollView>
    <ListView id="deviceList" items="{{ deviceList }}" >
            <ListView.itemTemplate>
                <GridLayout columns="auto,*" rows="140">
                    <Image device="{{ id, id }}"  src="https://cdn3.iconfinder.com/data/icons/design-n-code/100/272127c4-8d19-4bd3-bd22-2b75ce94ccb4-128.png" verticalAlignment="stretch" width="100" />
                    <StackLayout  col="1">
                        <Label class="name" text="{{ name, name }}" textWrap="true"  />
                        <Label text="{{ description, description }}"   />
                        <GridLayout columns="auto,*" rows="60">
                            <Button  text="Details" device="{{ id, id }}" col="0" tap="onDetails" />
                            <Button  text="Borrow" device="{{ id, id }}" col="1" tap="onBorrow" />
                        </GridLayout>
                    </StackLayout>
                </GridLayout>
            </ListView.itemTemplate>
    </ListView>
</ScrollView>
</Page>
