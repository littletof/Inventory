<Page loaded="onLoaded" >
<ScrollView>
    <ListView id="deviceList" items="{{ deviceList }}"  separatorColor="lightskyblue">
            <ListView.itemTemplate>
                <GridLayout columns="auto,*" rows="140">
                    <Image device="{{ id, id }}" class="listItem" src="https://cdn3.iconfinder.com/data/icons/design-n-code/100/272127c4-8d19-4bd3-bd22-2b75ce94ccb4-128.png" verticalAlignment="stretch" width="100" />
                    <StackLayout class="listItem" col="1">
                        <Label class="deviceName" text="{{ name, name }}" textWrap="true"  />
                        <Label text="{{ description, description }}"   />
                        <Button  text="Details" device="{{ id, id }}" tap="onDetails" />
                    </StackLayout>
                </GridLayout>
            </ListView.itemTemplate>
    </ListView>
</ScrollView>
</Page>
