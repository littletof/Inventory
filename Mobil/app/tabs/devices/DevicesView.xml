<Page loaded="onLoaded" >
	<AbsoluteLayout>
		<ScrollView width="100%" height="100%">
			<ListView id="deviceList" items="{{ deviceList }}">
					<ListView.itemTemplate>

						<GridLayout columns="auto,*" rows="140">
							<Image device="{{ id, id }}"  src="https://cdn3.iconfinder.com/data/icons/design-n-code/100/272127c4-8d19-4bd3-bd22-2b75ce94ccb4-128.png" verticalAlignment="stretch" width="100" />
							<StackLayout  col="1">
								<Label class="name" height="35" text="{{ name, name }}" textWrap="true"  />
								<Label style="color:black" text="{{ 'available:'+ available }}" height="20"  />
								<Label text="{{ description, description }}"   />
								<GridLayout columns="auto,*" rows="60">
									<Button  text="Details" device="{{ id, id }}" col="0" tap="onDetails" />
									<Button  text="Borrow" device="{{ id, id }}" col="1" tap="onBorrow" />
								</GridLayout>
							</StackLayout>
						</GridLayout>
					</ListView.itemTemplate>
			</ListView>
		</ScrollView>
		<StackLayout id="flt-btn-cnt">
			<StackLayout id="flt-btn" touch="onFLTTouch" tap="onFLTTap">
				<Image id="flt-btn-icon" src="res://qr_code_icon" verticalAlignment="stretch" horizontalAlignment="stretch"/>
			</StackLayout>
		</StackLayout>
	</AbsoluteLayout>
</Page>
