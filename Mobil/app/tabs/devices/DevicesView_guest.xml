<Page loaded="onLoaded" >
<AbsoluteLayout>
		<ScrollView width="100%" height="100%">
			<ListView id="deviceList" items="{{ deviceList }}" >
					<ListView.itemTemplate>

						<GridLayout columns="auto,*" rows="120" onTap="onDetails">
							<Image src="{{ image,image }}" width="100" height="100" /> 
							<StackLayout  col="1">
								<Label class="name" height="50" text="{{ name, name }}"   />
								<Label text="  {{ description, description }}" textWrap="true"  />								
							</StackLayout>
						</GridLayout>
					</ListView.itemTemplate>
			</ListView>
		</ScrollView>
	</AbsoluteLayout>
</Page>
