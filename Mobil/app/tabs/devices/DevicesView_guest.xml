<Page loaded="onLoaded" xmlns:nativescript-fresco="nativescript-fresco">
<AbsoluteLayout>
		<ScrollView width="100%" height="100%">
			<StackLayout orientation="vertical" width="100%" height="100%">
				<StackLayout orientation="horizontal">
					<TextView  id="searchTV" text="{{ tagsStr }}" width="75%"/>
					<Button  id="searchBtn" text="{{L('Search')}}" tap="onSearch" />
				</StackLayout>
			<ListView id="deviceList" items="{{ deviceList }}" >
					<ListView.itemTemplate>

						<GridLayout columns="auto,*" rows="120" onTap="onDetails">
							<nativescript-fresco:FrescoDrawee imageUri="{{ image }}" width="100" height="100" /> 
							<StackLayout  col="1" >
								<Label class="name" height="35" text="{{ name, name }}" width="100%"   />
								<StackLayout orientation="horizontal">
									<Label text="{{L('QuantityAvailable')}}" marginRight="2%"/>
									<Label style="color:black" text="{{ available }}" height="20"  />									
								</StackLayout>
								<Label text="{{ description, description }}" textWrap="true" width="100%" marginBottom="3%" />								
							</StackLayout>
						</GridLayout>
					</ListView.itemTemplate>
			</ListView>
		</StackLayout>
		</ScrollView>
	</AbsoluteLayout>
</Page>
