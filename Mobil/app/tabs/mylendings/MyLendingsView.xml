<Page loaded="onLoaded" >
    <ListView id="lendingList" items="{{ lendingList }}" height="1000" separatorColor="lightskyblue">
            <ListView.itemTemplate>
                <StackLayout orientation="horizontal">
                    <Image device="{{ id, id }}"  src="https://cdn3.iconfinder.com/data/icons/design-n-code/100/272127c4-8d19-4bd3-bd22-2b75ce94ccb4-128.png" verticalAlignment="stretch" width="100" loaded="onImageLoaded" />
                    <GridLayout  columns="*" rows="30,25,25,*">
                        <Label class="name" text="{{ deviceName, deviceName }}"  row="0" col="0" />
                        <Label text="{{ interval, interval }}"  row="1" col="0" />
                        <Label text="{{ quantity, quantity }}"  row="2" col="0" />
                        <Button  text="Details" device="{{ deviceID, deviceID }}" tap="onDetails" row="3" col="0" height="60"/>
                    </GridLayout>
                </StackLayout>
            </ListView.itemTemplate>
    </ListView>
</Page>
