<Page loaded="onLoaded">
        <ListView items="{{ lendings }}" id="lendings" itemTap="onTap">
            <ListView.itemTemplate>
                <GridLayout columns="auto, *" rows="auto">
                    <Image src="res://logo" stretch="none"  width="72" height="72"/>
                    <StackLayout col="1">
                        <Label text="{{ deviceName, deviceName }}" style.fontSize="20"/>
                        <Label text="{{ interval, interval }}" style.fontSize="14"/>
                        <Label text="{{ quantity, quantity }}" style.fontSize="14"/>                        
                        </StackLayout>
                </GridLayout>             
            </ListView.itemTemplate>
        </ListView>
</Page>



