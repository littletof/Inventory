<Page loaded="onLoaded">
        <ListView items="{{ requests }}" id="requests" itemTap="onTap">
            <ListView.itemTemplate>
                <GridLayout columns="auto,*" rows="auto">
                    <StackLayout col="0">
                        <Label text="{{ device_name }}" class="name" textWrap="true" style.fontSize="20"/>
                        <Label text="{{ user }}" class="name" textWrap="true" style.fontSize="18"/>
                        <Label text="{{ quantity }}" class="name" textWrap="true" style.fontSize="18"/>
                        <Label text="{{ comment }}" textWrap="true" style.fontSize="18"/>
                    </StackLayout>
                </GridLayout>             
            </ListView.itemTemplate>
        </ListView>
</Page>


